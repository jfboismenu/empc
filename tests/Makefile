BUILD_DIR=../build
SRC_DIR=../src

all:
	nasm -f bin test_mov.asm -o "$(BUILD_DIR)/test_mov.bin"
	g++ test_instructions.cpp -I "$(SRC_DIR)" -Wall -Werror -O3 -std=c++2a -shared -fPIC -o "$(BUILD_DIR)/libtest-instructions.so"
	cp *.py "$(BUILD_DIR)"
